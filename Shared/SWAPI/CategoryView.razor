@namespace Star_Wars_DataBase.Shared.SWAPI

<FluentGridItem xs="4">
    <NavLink href="@BlazorUrl" style="text-decoration: none;">
        <FluentCard>
            <div class="category-view">
                <div>
                    <FluentIcon Value="@Icon" Slot="start"/>
                </div>

                <div>
                    <h2>
                        @Name
                    </h2>

                    <div>
                        @if (Loading)
                        {
                            <FluentSkeleton Height="20px" Shimmer="true" Width="100%"/>
                        }
                        else
                        {
                            @SwapiUrl
                        }
                    </div>
                </div>
            </div>
        </FluentCard>
    </NavLink>
</FluentGridItem>

@code {

    [Parameter]
    [EditorRequired]
    public string Name { get; set; } = "";

    [Parameter]
    [EditorRequired]
    public string SwapiUrl { get; set; } = "";

    [Parameter]
    [EditorRequired]
    public string BlazorUrl { get; set; } = "";

    [Parameter]
    [EditorRequired]
    public bool Loading { get; set; }

    [Parameter]
    [EditorRequired]
    public Icon? Icon { get; set; }

}